<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/substitutionLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/reminder_title_text_view"
                android:text="Vertreter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerVertical" />

            <TextView
                android:id="@+id/rVertreter"
                style="@style/reminder_entry_text_view"
                android:text="Ja" />

            <TextView
                style="@style/reminder_title_text_view"
                android:text="Fach" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerVertical" />

            <TextView
                android:id="@+id/rFach"
                style="@style/reminder_entry_text_view"
                android:text="M" />

            <TextView
                style="@style/reminder_title_text_view"
                android:text="Raum" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerVertical" />

            <TextView
                android:id="@+id/rRaum"
                style="@style/reminder_entry_text_view"
                android:text="028" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stattLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/reminder_title_text_view"
                android:text="statt Lehrer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerVertical" />

            <TextView
                android:id="@+id/rStattLehrer"
                style="@style/reminder_entry_text_view"
                android:text="Ja" />

            <TextView
                style="@style/reminder_title_text_view"
                android:text="statt Fach" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerVertical" />

            <TextView
                android:id="@+id/rStattFach"
                style="@style/reminder_entry_text_view"
                android:text="M" />

            <TextView
                style="@style/reminder_title_text_view"
                android:text="statt Raum" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/dividerVertical" />

            <TextView
                android:id="@+id/rStattRaum"
                style="@style/reminder_entry_text_view"
                android:text="203" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/reminder_title_text_view"
        android:text="Bemerkung" />

    <View
        android:id="@+id/bemerkungDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/view_padding"
        android:background="?attr/dividerVertical" />

    <TextView
        android:id="@+id/rBemerkung"
        style="@style/reminder_entry_text_view"
        android:text="andr. Raum" />
</LinearLayout>